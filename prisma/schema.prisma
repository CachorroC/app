generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tarea {
  text    String
  id      Int      @id @unique @default(autoincrement())
  done    Boolean
  date    DateTime
  abogado Abogado
}

model Nota {
  text         String
  id           Int      @id @unique @default(autoincrement())
  done         Boolean
  pathname     String
  date         DateTime
}

enum Abogado {
  Melissa
  Camilo
  Fernando
  Carmen
}
