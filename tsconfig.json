{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "WebWorker"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "noEmit": true,
    "paths": {
      "#@/*": [
        "./src/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "types/*": [
        "./src/lib/types/*"
      ],
      "project/*": [
        "./src/lib/project/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "public/service-worker.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
